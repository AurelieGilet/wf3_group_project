{% extends "base.html.twig" %}


{% block title %}
    Détail du jeu 
{% endblock %}


{% block body %}

    <h1 class="h1 mt-3 mb-4">{{ game.name }}</h1>

		<div class="col-md-6 mx-auto">
			<div class="card mb-4 shadow border-dark">
				<img src="{{ asset('uploads/images/' ~ game.image)}}" alt="{{game.name}}">
				<div class="card-body">
					<h4 class="text-center size-game-name">{{game.name}}</h4>
					<p class="card-text">Règle du jeu : {{game.description}}</p>
					<hr class="border-dark">
					<p class="card-text">Catégorie : {{game.category.name}}</p>
					<hr class="border-dark">
					<p class="card-text">Age: {{game.public}}</p>
					<hr class="border-dark">
					<p class="card-text">Nombre de joueurs : {{game.minPlayers}} {% if game.maxPlayers != NULL and game.maxPlayers != game.minPlayers %} à {{game.maxPlayers}} {% endif %}</p>
					<hr class="border-dark">
					<p class="card-text">Ville de location : {{game.owner.city}}</p>
					<hr class="border-dark">
					<div class="d-flex justify-content-center align-items-center">
						<a href="{{ path('borrowing', {'id': game.id}) }}" class="btn-jp mb-4">Emprunter</a>
					</div>
				</div>
			</div>
		</div>



{% endblock %}



