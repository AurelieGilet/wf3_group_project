{% extends "base.html.twig" %}


{% block title %}
    Détail du jeu 
{% endblock %}


{% block body %}

        <h2 class="display-4 text-center pb-4">{{ detail.name }}</h2>

<div class="col-md-6 mx-auto">
			<div class="card mb-4 shadow">
				<img src="{{detail.image}}" alt="{{detail.name}}">
				<div class="card-body">
					<h4 class="text-center">{{detail.name}}</h4>
					<p class="card-text">Règle du jeu : {{detail.description}}</p>
					<hr>
					<p class="card-text">Catégorie : {{detail.category}}</p>
					<hr>
					<p class="card-text">Age: {{detail.public}}</p>
					<hr>
					<p class="card-text">Nombre de joueurs : {{detail.minPlayers}} {% if detail.maxPlayers != NULL %} à {{detail.maxPlayers}} {% endif %}</p>
					<div class="d-flex justify-content-between align-items-center">
						<div class="btn-group">
							<a href="" class="btn btn-sm btn-outline-secondary">Louer</a>
						</div>
					</div>
				</div>
			</div>
		</div>



{% endblock %}



