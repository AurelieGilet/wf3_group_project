{% extends "base.html.twig" %}

{% block title %}Catalogue{% endblock %}

{% block body %}

<div class="row">

	{% for game in games %}
			
		<div class="col-md-4 ">
			<div class="card mb-4 shadow-sm">
				<img src="{{game.image}}" alt="{{game.name}}">
				<div class="card-body">
					<h4 class="text-center">{{game.name}}</h4>
					<p class="card-text">Règle du jeu : {{game.description|striptags|slice(0,250)}}</p>
					<hr>
					<p class="card-text">Catégorie : {{game.category}}</p>
					<hr>
					<p class="card-text">Age: {{game.public}}</p>
					<hr>
					<p class="card-text">Nombre de joueurs : {{game.minPlayers}} {% if game.maxPlayers != NULL %} à {{game.maxPlayers}} {% endif %}</p>
					<div class="d-flex justify-content-between align-items-center">
						<div class="btn-group">
							
							<a href="{{ path('catalogue_detail', {'id': game.id}) }}" class="btn btn-sm btn-outline-secondary">Voir le détail</a>
							<a href="" class="btn btn-sm btn-outline-secondary">Louer</a>
						</div>
					</div>
				</div>
			</div>
		</div>

	{% endfor %}
</div>

{% endblock %}