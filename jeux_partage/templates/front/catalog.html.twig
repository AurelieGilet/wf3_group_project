{% extends "base.html.twig" %}

{% block title %}Catalogue{% endblock %}

{% block body %}

	<h1 class="h1 size-title mt-3 mb-5">Catalogue des Jeux</h1>

	<div class="row">
		{% for game in games %}

			<div class="col-md-4">
				<div class="card mb-4 shadow border-dark">
					<img src="{{ asset('uploads/images/' ~ game.image) }}" alt="{{game.name}}">
					<div class="card-body">
						<h4 class="text-center size-game-name">{{game.name}}</h4>
						
						<hr class="border-dark">
						<p class="card-text">Catégorie : {{game.category.name}}</p>
						<hr class="border-dark">
						<p class="card-text">Age: {{game.public}}</p>
						<hr class="border-dark">
						<p class="card-text">Nombre de joueurs : {{game.minPlayers}} {% if game.maxPlayers != NULL %} à {{game.maxPlayers}} {% endif %}</p>
						<hr class="border-dark">
						<p class="card-text">Ville de location : {{game.owner.city}}</p>
						<hr class="border-dark">
						<div class="d-flex justify-content-between align-items-center">
							<div class="btn-group">
                <a href="{{ path('catalogue_detail', {'id': game.id}) }}" class="btn-jp size-button">Voir le détail</a>
							  <a href="" class="btn-jp ml-2">Louer</a>
              </div>
						</div>
					</div>
				</div>
			</div>

		{% endfor %}
	</div>

{% endblock %}