                        <th> {{ oneColonne|upper}}</th>
                    {% endif %}        
                
                {% endfor %}
                    <th> NOMBRE DE JEUX </th>
                    <th> MODIFIER</th>
                    <th> SUPPRIMER</th>

            </tr>

            {% for oneCategory in categorieBdd %}
                <tr>
                    
                    <td> {{ oneCategory.id}} </td>
                    <td>{{ oneCategory.name }}</td>
                    <td>{{ oneCategory.games|length }}</td>

                    <td> <a href="" class="btn btn-info"></a> </td>
                    <td> <a href="{{ path('back_remove_category', {'id': oneCategory.id}) }}" class="btn btn-danger"></a> </td>


                </tr>
            {% endfor %}
        </table>


{% endblock %}