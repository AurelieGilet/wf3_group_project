{% extends 'base.html.twig' %}

{% block  title %}
    Créer un compte
{% endblock %}


{% block body %}
        
         <h2 class="display-4 text-center mt-5">Créer votre compte</h2>


        {{ form_start(form) }}

        {{ form_row(form.username, {'label' : "Nom d'utilisateur", 'attr' : {'placeholder': "Nom d'utilisateur"}}) }}

        {{ form_row(form.email, {'attr': {'placeholder': 'Adresse e-mail'}}) }}

        {{ form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}

        {{ form_row(form.confirm_password, {'label' : 'Confirmation du mot de passe', 'attr' : {'placeholder' : 'Confirmez votre mot de passe'}}) }}

        <button type="submit" class="btn btn-dark"> Créer mon compte</button>

        {{ form_end(form) }}












{% endblock %}