{% extends 'base.html.twig' %}

{% block  title %}
    Créer un compte
{% endblock %}


{% block body %}
   
         <h2 class="display-4 text-center">Créer votre compte</h2>

   
{# importer "form_themes: ['bootstrap_4_layout.html.twig']" dans config -> packages -> twig.yaml pr avoir un formulaire bootstrap#}
        {{ form_start(form, {'attr' : {'class': 'col-md-4 mx-auto' }}) }}

            {{ form_row(form.username, {'label' : "Nom d'utilisateur", 'attr' : {'placeholder': "Nom d'utilisateur" }}) }}

            {{ form_row(form.email, {'attr': {'placeholder': 'Adresse e-mail'}}) }}

            {{ form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}

            {{ form_row(form.confirm_password, {'label' : 'Confirmation du mot de passe', 'attr' : {'placeholder' : 'Confirmez votre mot de passe'}}) }}

            <button type="submit" class="btn btn-dark"> Créer mon compte</button>
    
        {{ form_end(form) }}

    










{% endblock %}